<div class="max-w-6xl mx-auto">
  <h1 class="text-3xl font-bold mb-6">Properties</h1>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Property ID</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
          <% if Property.column_names.include?('bedrooms') %>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bedrooms</th>
          <% end %>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @properties.each do |property| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= property.property_id %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= property.name %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= property.email %></td>
          <% if property.respond_to?(:bedrooms) %>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= property.bedrooms %></td>
          <% end %>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium flex">
            <%= link_to "View", property, class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="flex justify-between items-center mt-6">
    <div class="flex space-x-4">
      <%= button_to "Parse Property Feed", import_property_feed_index_path, method: :post, class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2" %>
    </div>
  </div>
</div>
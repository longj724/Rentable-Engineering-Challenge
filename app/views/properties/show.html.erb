<div class="max-w-3xl mx-auto bg-white shadow-lg rounded-lg overflow-hidden">
  <div class="p-6">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-800"><%= @property.name %></h1>
      <div class="text-sm text-gray-500">Property ID: <%= @property.property_id %></div>
    </div>

    <div class="space-y-4">
      <div class="flex items-center">
        <div class="w-1/3 text-gray-600 font-medium">Email:</div>
        <div class="w-2/3"><%= @property.email %></div>
      </div>

      <% if @property.respond_to?(:bedrooms) && @property.bedrooms.present? %>
      <div class="flex items-center">
        <div class="w-1/3 text-gray-600 font-medium">Bedrooms:</div>
        <div class="w-2/3"><%= @property.bedrooms %></div>
      </div>
      <% end %>
    </div>
  </div>
</div>